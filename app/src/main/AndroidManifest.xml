<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.missilelauncher.missilelauncher">

    <uses-permission android:name="android.permission.SYSTEM_ALERT_WINDOW" />
    <uses-permission android:name="android.permission.ACTION_MANAGE_OVERLAY_PERMISSION" />
    <uses-permission android:name="android.permission.VIBRATE" />
    <uses-permission android:name="android.permission.RECEIVE_BOOT_COMPLETED"/>
    <uses-permission android:name="android.permission.SET_ALARM"/>

    <application
        android:allowBackup="true"
        android:icon="@mipmap/missile_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/missile_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name="com.missilelauncher.missilelauncher.MainActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <service android:name="com.missilelauncher.missilelauncher.FloatingWindow" />

        <activity
            android:name="com.missilelauncher.missilelauncher.SettingsActivity"
            android:label="@string/title_activity_settings"></activity>
        <activity android:name="com.missilelauncher.missilelauncher.GroupIconPicker" />

        <activity android:name="com.missilelauncher.missilelauncher.G1SelectedItems"
            android:label="@string/pref_group1"/>
        <activity android:name="com.missilelauncher.missilelauncher.G2SelectedItems"
            android:label="@string/pref_group2"/>
        <activity android:name="com.missilelauncher.missilelauncher.G3SelectedItems"
            android:label="@string/pref_group3"/>
        <activity android:name="com.missilelauncher.missilelauncher.G4SelectedItems"
            android:label="@string/pref_group4"/>
        <activity android:name="com.missilelauncher.missilelauncher.G5SelectedItems"
            android:label="@string/pref_group5"/>
        <activity android:name="com.missilelauncher.missilelauncher.G6SelectedItems"
            android:label="@string/pref_group6"/>
        <activity android:name="com.missilelauncher.missilelauncher.G7SelectedItems"
            android:label="@string/pref_group7"/>
        <activity android:name=".PlayStorePrompt"
            android:theme="@style/AppTheme.Modal"
            />

        <receiver android:name=".DeviceBootReceiver">
            <intent-filter>
                <action android:name="android.intent.action.BOOT_COMPLETED"/>
            </intent-filter>
        </receiver>
    </application>



</manifest>