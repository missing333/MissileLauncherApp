<PreferenceScreen xmlns:android="http://schemas.android.com/apk/res/android">

    <!-- A 'parent' preference, which enables/disables child preferences (below)
         when checked/unchecked. -->
    <Preference
        android:key="group4Icon"
        android:showDefault="true"
        android:showSilent="true"
        android:title="@string/pref_groupIcon"/>

    <EditTextPreference
        android:defaultValue="Group 4"
        android:key="groupName4"
        android:selectAllOnFocus="true"
        android:singleLine="true"
        android:title="Group 4 Name: "
        android:inputType="textCapWords"
        android:capitalize="words" />

    <ListPreference
        android:defaultValue="Most Used"
        android:entries="@array/sort_options"
        android:entryValues="@array/sort_options"
        android:key="sortG4"
        android:title="Sorting Method for this Group" />

    <Preference
        android:key="group4AppList"
        android:showDefault="true"
        android:showSilent="true"
        android:title="@string/pref_groupAppsInGroup" />


</PreferenceScreen>
